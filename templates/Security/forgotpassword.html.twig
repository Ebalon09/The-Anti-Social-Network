{% extends 'Security/security.html.twig' %}

{% block securityform %}
    <div class="card" id="securityCard">
        <div class="card-header text-center">
            <h1>Passwort vergessen</h1>
        </div>

        <div class="card-body" id="securityCardBody">
            <form action="{{ path('password') }}" method="post">
                <div class="mb-3">
                    <label class="sr-only">E-Mail Adresse</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="username" name="_username" placeholder="Username" required />
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="sr-only">E-Mail Adresse</label>
                    <div class="input-group">
                        <input type="email" class="form-control" id="email" name="_email" placeholder="E-Mail Adresse" required />
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-at"></i></span>
                        </div>
                    </div>
                </div>

                <div class="row securityFormLinks">
                    <div class="col-xs-12 col-md-12 text-right">
                        <a href="{{ path('login') }}" >Einloggen</a>
                    </div>
                </div>

                <div class="form-group text-right">
                    <button class="btn btn-primary" type="submit" name="action">Account zur√ºcksetzen</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
