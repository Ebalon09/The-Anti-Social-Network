{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block content %}
<div class="container">
    <div class="row hw-100">
        <div class="col-md-12 m-auto">
            <div class="card" id="securityCard">
                <div class="card-header text-center">
                    <h1>Login</h1>
                </div>
                <div class="card-body" id="securityCardBody">
                    <form action="{{ path('login') }}" method="post">
                        <div class="mb-3">
                            <label class="sr-only">E-Mail Adresse</label>
                            <div class="input-group">
                                <input type="email" class="form-control" id="email" name="_email" placeholder="E-Mail Adresse" required/>
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                            </div>
                        </div>

                        <div class="input-group">
                            <label class="sr-only">Passwort</label>
                            <input type="password" class="form-control" id="password" name="_plainPassword" placeholder="Passwort" required/>
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            </div>
                        </div>

                        <div class="row securityFormLinks">
                            <div class="col-xs-12 col-md-12 text-right">
                                <a href="{{ path('register') }}">Noch nicht registriert?</a>
                            </div>
                        </div>

                        <div class="form-group text-right" id="loginButton">
                            <button class="btn btn-primary" type="submit" name="action">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}