{% extends "Feed/feed.html.twig" %}

{% block content %}
            <div class="card" id="securityCard">
                <div class="card-header">
                    <h2>
                        Profil
                    </h2>
                </div>
                <div class="card-body">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a href="#"><img id="profileImage" class="img-responsive" alt="" src="#"></a>

                        <div class="row">
                            {{ form_start(form) }}
                                <div class="col-xs-6 col-md-6">
                                    {{ form_widget(form.firstName) }}
                                </div>

                                <div class="col-xs-6 col-md-6">
                                    {{ form_widget(form.lastName) }}
                                </div>
                                <div class="col-xs-6 col-md-6">
                                    {{ form_widget(form.email) }}
                                </div>

                                <div class="col-xs-6 col-md-6">
                                    {{ form_widget(form.username) }}
                                </div>

                                <div class="form-group text-right mt-2">
                                    <button class="btn btn-primary" type="submit" name="action">Speichern</button>
                                </div>
                            {{ form_end(form) }}
                        </div>

                        <div class="row">
                            <div class="col-xs-12 col-md-12">
                                <span>Posts: {{ entries|length }}</span>
                                <span>Kommentare: {{ comments|length }}</span>
                                <span>Dislikes: {{ dislikes|length }}</span>
                            </div>
                        </div>
                    {% else %}
                        <span>Bitte loggen Sie sich ein. Falls Sie noch keinen Account haben registrieren Sie sich <a href="{{ path('register') }}">hier</a></span>
                    {% endif %}
                </div>
            </div>
{% endblock %}