{% extends 'index.html.twig' %}

{% block header %}
     <nav class="navbar navbar-expand-lg navbar-light bg-dark">
          <a class="navbar-brand text-white" href="{{ path('feed') }}">Anti Social Network</a>
          <div class="ml-auto">
               <a class="" href="{{ path('user') }}">Profil</a>
          </div>
     </nav>
{% endblock %}

{% block content %}

     <div class="row">
          <div class="col-md-3">

          </div>
          <div class="col-md-6">
               <div class="card">
                    <div class="card-header">
                         <h5>Say something... or don't.</h5>
                    </div>
                    {{ form_start(form) }}
                    <div class="mt-3">
                         <div class="input-group">
                              {{ form_widget(form.body) }}
                              {{ form_widget(form.media) }}
                              {{ form_widget(form.link) }}
                         </div>
                         <div class="form-group text-right" id="registerButton">
                              <button class="btn btn-primary" type="submit" name="action">posten</button>
                         </div>
                    </div>
                    {{ form_end(form) }}

               </div>
          </div>
          <div class="col-md-3">

          </div>
     </div>

     {% for entry in entries %}
          <!-- todo remove inline style-->
          <div class="media" style="border: black 2px">
               <a class="media-left" href="#fake">
                    <img id="userpicpost" alt="" class="media-object img-rounded" src="#">
               </a>
               <div class="media-body">
                    <h4 class="media-heading" id="Username">{{ entry.author.username }}</h4>
                    <p id="Text">{{ entry.body }}</p>
                    {% if entry.media %}
                         <p id="media">{{ entry.media }}</p>
                    {% endif %}
